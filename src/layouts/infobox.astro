---
import Benchmarking from "/src/images/icons/Benchmarking icon.svg";
import UXFieldStudies from "/src/images/icons/UX Field Studies icon.svg";
import UserResearch from "/src/images/icons/User Research icon.svg";
import Prototyping from "/src/images/icons/Prototyping icon.svg";
import FrontendEngineering from "/src/images/icons/Frontend engineering icon.svg";
import DesignSystems from "/src/images/icons/Design systems icon.svg";
import UsabilityTesting from "/src/images/icons/Usability testing icon.svg";
import UIDesign from "/src/images/icons/UI Design icon.svg";

import CardGridCellAnimatedBorder from "../components/card-grid-cell-animated-border.astro";
---

<section class="second-wrapper stack-m">
  <h2 class="title-1-lines">User Experience Design</h2>
  <h3 class="title-6">Core Expertise & Services</h3>

  <div class="card-grid">
    <!-- <CardGridCellAnimatedBorder /> -->
    <section class="card-grid-cell stack-xs">
      <UXFieldStudies />
      <h4 class="title-1">UX field studies</h4>
    </section>
    <section class="card-grid-cell stack-xs">
      <UserResearch />
      <h4 class="title-1">User Research</h4>
    </section>
    <section class="card-grid-cell stack-xs">
      <Prototyping />
      <h4 class="title-1">Prototyping</h4>
    </section>
    <section class="card-grid-cell stack-xs">
      <UIDesign />
      <h4 class="title-1">UI Design</h4>
    </section>
    <section class="card-grid-cell stack-xs">
      <DesignSystems />
      <h4 class="title-1">Design systems</h4>
    </section>
    <section class="card-grid-cell stack-xs">
      <FrontendEngineering />
      <h4 class="title-1">Frontend engineering</h4>
    </section>
    <section class="card-grid-cell stack-xs">
      <UsabilityTesting />
      <h4 class="title-1">Usability testing</h4>
    </section>
    <section class="card-grid-cell stack-xs">
      <Benchmarking />
      <h4 class="title-1">Benchmarking</h4>
    </section>
  </div>
</section>

<style>
  section {
    background: linear-gradient(
      150deg,
      light-dark(
          color-mix(in oklch, var(--color-white) 100%, var(--color-black)),
          color-mix(in oklch, var(--color-reddusk) 95%, var(--color-black))
        )
        0%,
      light-dark(
          color-mix(in oklch, var(--color-white) 97%, var(--color-black)),
          color-mix(in oklch, var(--color-rednight) 100%, var(--color-white))
        )
        70%
    );

    padding: var(--space-2xl);
    border: var(--border-transparent);
    border-radius: var(--border-radius-big);
  }

  h3 {
    text-align: center;
    margin-block-end: var(--space-l);
  }

  .card-grid {
    display: grid;
    grid-gap: var(--space-m);

    &::before {
      content: "";
      aspect-ratio: 1;
      grid-row: 1 / 1;
      grid-column: 1 / 1;
    }

    & > *:first-child {
      grid-row: 1 / 1;
      grid-column: 1 / 1;
    }

    & {
      grid-template-columns: repeat(auto-fill, minmax(min(11.5rem, 30%), 1fr));
      grid-auto-rows: 1fr;
    }

    & .card-grid-cell {
      display: flex;
      flex-direction: column;
      /* TODO: Row on small screens? */
      justify-content: center;
      align-items: center;
      text-align: center;

      padding: var(--space-m);
      /* calculate the border radius:
     Reference: https://www.30secondsofcode.org/css/s/nested-border-radius/
     */
      border-radius: calc(var(--border-radius) + var(--space-s));
      transition: var(--transition-initial);

      &:hover {
        transition: var(--transition-hover);
        background: revert;
        background-color: color-mix(
          in oklch,
          var(--color-darkgrey) / 0.1 100%,
          var(--color-black)
        );
        border-color: var(--color-grey);
      }
    }

    & svg {
      width: clamp(3rem, 50%, 4rem);
      user-select: none;
    }
  }
</style>
