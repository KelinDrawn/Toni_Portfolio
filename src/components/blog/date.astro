---
const { created } = Astro.props;

// Get the build date dynamically (when the site was last built)
const buildDate = import.meta.env.BUILD_DATE || new Date().toISOString();

// Format dates to be more readable (DD.MM.YYYY)
const formatDate = (isoString: string) => {
  const date = new Date(isoString);
  const day = String(date.getDate()).padStart(2, "0");
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const year = date.getFullYear();
  return `${day}.${month}.${year}`;
};

const formattedCreated = isNaN(new Date(created).getTime())
  ? formatDate(new Date().toISOString())
  : formatDate(created);
const formattedUpdated = formatDate(buildDate);
---

<div>
  <p class="title-0">
    published {formattedCreated}, updated {formattedUpdated}
  </p>
</div>
